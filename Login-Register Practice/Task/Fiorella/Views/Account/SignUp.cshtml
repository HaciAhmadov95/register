
@model RegisterVM
@{
    ViewData["Title"] = "SignUp";
}
<div class="container mt-5">
    <h1>SignUp</h1>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="register-area mt-5" style="width:50%;margin:0 auto">
        <form method="post" asp-action="SignUp">
            <div class="form-group">
                <label>Username</label>
                <input asp-for="Username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>

            <div class="form-group">
                <label>Full Name</label>
                <input asp-for="Fullname" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" >
                <span class="text-danger" asp-validation-for="Fullname"></span>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" >
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input asp-for="Password" class="form-control" id="exampleInputPassword1" >
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label>Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" id="exampleInputPassword1" >
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
        
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


